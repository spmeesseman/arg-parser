{
    "exclude": [
        "node_modules",
        "doc",
        "install",
        "res",
        "script",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "build",
        "sourceMap": true,
        "rootDir": ".",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "lib": [
            "dom",
            "es6"
        ],
    }
}