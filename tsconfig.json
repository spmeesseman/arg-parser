{
    "exclude": [
        "node_modules",
        "doc",
        "dist",
        "install",
        "res",
        "script",
        "**/*.spec.ts"
    ],
    "include": ["src/**/*"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es6"
        ],
    }
}